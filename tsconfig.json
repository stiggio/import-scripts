{
  "compilerOptions": {
    "declaration": false,
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
